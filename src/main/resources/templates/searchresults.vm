<html>
<head>
</head>
<body class="page-type-admin">
<div class="content-container">

    <div class="content-body">
        <h1>Issue Search For StatusTimeReport</h1>

        #if ($errors.size()>0)
            <div class="aui-message error shadowed">
                #foreach($error in $errors)
                    <p class="title">
                        <span class="aui-icon icon-error"></span>
                        <strong>$error</strong>
                    </p>
                #end
            </div>
            <!-- .aui-message -->
        #end

        #if ($searchresults.size() > 0)
            <div class="issues">
                <table class="aui">
                    <thead>
                    <tr>
                        <th>Key</th>
                        <th>Summary</th>
                        <th>Description</th>
                        <th>Assignee</th>
                        <th>Reporter</th>
                        <th>ChangeStatusTime</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                        #foreach( $issue in $searchresults )
                        <tr>
                            <td>$issue.getKey()</td>
                            <td>$issue.getSummary()</td>
                            <td>
                                #if($issue.getDescription())
                                    $issue.getDescription()
                                #end
                            </td>
                            <td>
                                $issue.getAssignee().getName()
                            </td>
                            <td>
                                $issue.getReporter().getName()
                            </td>
                            <td>
                                $issue.getCreated()
                            </td>
                        </tr>
                        #end
                    </tbody>
                </table>
            </div>
        #end
        <form method="get" action="issuecrud" class="aui">
            <input type="hidden" name="new" value="y">
            <input type="submit" class="button" value="Create new issue">
        </form>
    </div>
</div>
</body>
</html>